{
    "name": "cryptofxchatapp/flarum-chat-iframe",
    "description": "Adds an iframe chat popup to Flarum with group-based access control and mobile responsive design",
    "keywords": ["flarum", "extension", "chat", "iframe", "popup", "mobile"],
    "type": "flarum-extension",
    "license": "MIT",
    "version": "1.0.2",
    "require": {
        "flarum/core": "^1.0"
    },
    "authors": [
        {
            "name": "CryptoFX Chat App",
            "email": "support@cryptofxchatapp.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CryptoFXChatApp\\ChatIframe\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Chat Iframe",
            "category": "feature",
            "icon": {
                "name": "fas fa-comments",
                "color": "#0d6efd",
                "backgroundColor": "#FFF"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/cryptofxchatapp/flarum-chat-iframe/issues",
        "source": "https://github.com/cryptofxchatapp/flarum-chat-iframe"
    }
}
