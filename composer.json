{
    "name": "cryptofxchatapp/flarum-chat-iframe",
    "description": "Adds an iframe chat popup to Flarum with group-based access control and mobile responsive design - Console configurable",
    "keywords": ["flarum", "extension", "chat", "iframe", "popup", "mobile", "console"],
    "type": "flarum-extension",
    "license": "MIT",
    "version": "1.0.3",
    "require": {
        "flarum/core": "^1.0"
    },
    "authors": [
        {
            "name": "CryptoFX Chat App",
            "email": "support@cryptofxchatapp.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CryptoFXChatApp\\ChatIframe\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Chat Iframe",
            "category": "feature",
            "icon": {
                "name": "fas fa-comments",
                "color": "#0d6efd",
                "backgroundColor": "#FFF"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
